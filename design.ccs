/* PART 4*/
  .columns {
    display: flex;
    flex-flow: row wrap;
    justify-content: center;
    margin: 3px 3px;
  }
  .column {
    flex: 1;
    border: 3px solid #1a1a1a;
    margin: 5px;
    padding: 5px;
    height: auto;
    -webkit-box-shadow: 5px 7px 7px #b87777; 
    -moz-box-shadow: 5px 7px 7px #df382d;  
    box-shadow: 5px 7px 7px #333a3a;  
  }
  .column iframe:hover{
    transition: transform 0.9s;
    transform: scale(1.05);
    opacity: 2;
  }
  
  @media screen and (max-width:700px) {
    .footer-container{
      max-width: 700px;
      height: 1100px;
    }
  .hero-image:hover {
    height: 1100px;
  }
  .topnav a:not(:first-child) {display: none;}
  .topnav a.icon {
    float: right;
    display: block;
  }
  .topnav.responsive {position: relative;}
  .topnav.responsive a.icon {
    position: absolute;
    right: 0;
    top: 0;
  }
  .topnav.responsive a {
    float: none;
    display: block;
    text-align: left;
  }
  }
